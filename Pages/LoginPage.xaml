<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMU_APP.Pages.LoginPage"
             Title="Login"
             BackgroundColor="#F5F5F5"
             Padding="30">

    <ScrollView>
        <StackLayout VerticalOptions="CenterAndExpand" Spacing="25">

            <!-- Logo -->
            <Image Source="logo.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>

            <!-- Heading -->
            <Label Text="Welcome Back ðŸ‘‹"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333" />

            <!-- Username Entry -->
            <Frame Padding="10" CornerRadius="8" HasShadow="False" BackgroundColor="White">
                <Entry x:Name="UsernameEntry"
                       Placeholder="Username or Email Address"
                       FontSize="16"
                       TextColor="Black"/>
            </Frame>

            <!-- Password Entry -->
            <Frame Padding="10" CornerRadius="8" HasShadow="False" BackgroundColor="White">
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       FontSize="16"
                       TextColor="Black"/>
            </Frame>

            <!-- Login Button -->
            <Button Text="Login"
                    Clicked="OnLoginClicked"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="45"/>

            <!-- Sign Up Redirect -->
            <Button Text="Don't have an account? Sign Up"
                    Clicked="OnSignupRedirect"
                    BackgroundColor="Transparent"
                    TextColor="#007AFF"
                    FontAttributes="Italic"
                    HeightRequest="40"/>

            <!-- Status Label -->
            <Label x:Name="StatusLabel"
                   TextColor="Crimson"
                   FontSize="14"
                   HorizontalOptions="Center"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
