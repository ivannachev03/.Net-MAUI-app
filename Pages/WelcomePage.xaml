<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMU_APP.Pages.WelcomePage"
             Title="Welcome"
             BackgroundColor="#F5F5F5"
             Padding="20">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Center" Spacing="25">

                <!-- Carousel 
                <Frame Padding="0" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                    <CarouselView x:Name="ImageCarousel"
                                  ItemsSource="{Binding Images}"
                                  Loop="True"
                                  IsBounceEnabled="True"
                                  HeightRequest="250">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Aspect="AspectFill" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </Frame> -->
                <Frame Padding="0" CornerRadius="12" HasShadow="True" BackgroundColor="White">
                    <Image Source="logo2.png"
                           Aspect="AspectFit"
                           HeightRequest="250" />
                </Frame>

                <!-- Welcome Message -->
                <Label Text="ðŸŽ‰ Welcome!"
                       FontSize="34"
                       FontAttributes="Bold"
                       TextColor="DarkGreen"
                       HorizontalOptions="Center" />

                <Label Text="You are successfully logged in."
                       FontSize="18"
                       TextColor="#333"
                       HorizontalOptions="Center" />

                <!-- Button Group (Side-by-side) -->
                <Grid ColumnSpacing="15" Padding="0" HorizontalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Text="Add Vehicle"
                            Clicked="AddButton_Clicked"
                            BackgroundColor="#2C2C2E"
                            TextColor="White"
                            CornerRadius="10"
                            BorderColor="#555"
                            BorderWidth="1"
                            Padding="12,8"
                            WidthRequest="120"/>

                    <Button Grid.Column="1"
                            Text="View Cars"
                            Clicked="ViewCarsButton_Clicked"
                            BackgroundColor="#1C1C1E"
                            TextColor="White"
                            CornerRadius="10"
                            BorderColor="#555"
                            BorderWidth="1"
                            Padding="12,8"
                            WidthRequest="120"/>

                    <Button Grid.Column="2"
                            Text="Log Out"
                            Clicked="OnLogoutClicked"
                            BackgroundColor="#000000"
                            TextColor="White"
                            CornerRadius="10"
                            BorderColor="#555"
                            BorderWidth="1"
                            Padding="12,8"
                            WidthRequest="120"/>
                </Grid>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
