<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMU_APP.Pages.CarDetailPage"
             Title="Car Details"
             BackgroundColor="#FAFAFA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Car Image -->
            <Frame HasShadow="True" CornerRadius="15" Padding="0" BorderColor="#ccc" HeightRequest="250" HorizontalOptions="Fill">
                <Image Source="{Binding ImagePath}"
                       Aspect="AspectFit"
                       WidthRequest="300"
                       HeightRequest="250"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <!-- Brand -->
            <Label Text="{Binding Brand}"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#222"
                   HorizontalOptions="Center"/>

            <!-- Model -->
            <Label Text="{Binding Model}"
                   FontSize="20"
                   TextColor="#444"
                   HorizontalOptions="Center"/>

            <!-- Price -->
            <Label Text="{Binding Price}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="DarkGreen"
                   HorizontalOptions="Center"/>

            <!-- Info Section -->
            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="15"
                   BorderColor="#DDD"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Additional Information:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333"/>
                    <Label Text="{Binding Info}"
                           FontSize="14"
                           TextColor="#555"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
