<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMU_APP.Pages.CarDetailPage"
             Title="Car Details">
    <ScrollView>
        <StackLayout Padding="20">
            <Image Source="{Binding ImagePath}"
                   HeightRequest="200"
                   Aspect="AspectFill"/>
            <Label Text="{Binding Brand}" FontSize="20" FontAttributes="Bold"/>
            <Label Text="{Binding Model}" FontSize="18"/>
            <Label Text="{Binding Price}" FontSize="18" TextColor="Green"/>
            <Label Text="Additional Information:" FontSize="16" FontAttributes="Bold"/>
            <Label Text="{Binding Info}" FontSize="14"/>
        </StackLayout>
    </ScrollView>
</ContentPage>