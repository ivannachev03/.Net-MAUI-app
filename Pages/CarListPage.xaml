<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMU_APP.Pages.CarListPage"
             Title="Car List">
    <RefreshView>
        <CollectionView x:Name="CarsCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnCarSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame HeightRequest="100" Padding="0" HasShadow="True">
                            <Grid ColumnDefinitions="100, *">
                                <Image Source="{Binding ImagePath}"
                                       Aspect="AspectFill"
                                       HeightRequest="100"
                                       WidthRequest="100"/>
                                <StackLayout Grid.Column="1" Padding="10">
                                    <Label Text="{Binding Brand}" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="{Binding Model}" FontSize="14"/>
                                    <Label Text="{Binding Price}" FontSize="14" TextColor="Green"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>