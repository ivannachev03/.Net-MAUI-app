<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMU_APP.Pages.AddVehicle"
             Title="AddVehicle"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- Brand Picker -->
            <Label Text="Brand" FontAttributes="Bold" TextColor="#333" />
            <Frame BackgroundColor="White" CornerRadius="8" HasShadow="False" Padding="5">
                <Picker x:Name="BrandPicker" Title="Select a brand"
                        TitleColor="#888" TextColor="Black">
                    <Picker.Items>
                        <x:String>Toyota</x:String>
                        <x:String>Ford</x:String>
                        <x:String>BMW</x:String>
                        <x:String>Honda</x:String>
                        <x:String>Chevrolet</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>

            <!-- Model Entry -->
            <Label Text="Model" FontAttributes="Bold" TextColor="#333"/>
            <Frame BackgroundColor="White" CornerRadius="8" HasShadow="False" Padding="5">
                <Entry x:Name="ModelEntry" Placeholder="Enter model" FontSize="16" TextColor="Black"/>
            </Frame>

            <!-- Price Entry -->
            <Label Text="Price" FontAttributes="Bold" TextColor="#333"/>
            <Frame BackgroundColor="White" CornerRadius="8" HasShadow="False" Padding="5">
                <Entry x:Name="PriceEntry" Placeholder="Enter price" Keyboard="Numeric" FontSize="16" TextColor="Black"/>
            </Frame>

            <!-- Information -->
            <Label Text="Information" FontAttributes="Bold" TextColor="#333"/>
            <Frame BackgroundColor="White" CornerRadius="8" HasShadow="False" Padding="5">
                <Editor x:Name="InfoEditor" Placeholder="Enter additional info"
                        HeightRequest="100" FontSize="14" TextColor="Black"/>
            </Frame>

            <!-- Image Preview -->
            <Label Text="Car Photo" FontAttributes="Bold" TextColor="#333"/>
            <Frame Padding="0" HasShadow="True" CornerRadius="10" BorderColor="#ccc" BackgroundColor="#E0E0E0">
                <Image x:Name="CarImage"
                       HeightRequest="200"
                       WidthRequest="200"
                       Aspect="AspectFill"
                       BackgroundColor="LightGray"/>
            </Frame>

            <!-- Photo Button -->
            <Button Text="Choose Photo"
                    Clicked="OnChoosePhotoClicked"
                    BackgroundColor="#333"
                    TextColor="White"
                    BorderColor="#555"
                    BorderWidth="1"
                    CornerRadius="8"
                    Padding="12,8"
                    FontAttributes="Bold"/>

            <!-- Submit Button -->
            <Button Text="Submit"
                    Clicked="OnSubmitClicked"
                    BackgroundColor="#1C1C1E"
                    TextColor="White"
                    BorderColor="#555"
                    BorderWidth="1"
                    CornerRadius="8"
                    Padding="12,8"
                    FontAttributes="Bold"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
